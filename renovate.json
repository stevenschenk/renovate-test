{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Don't upgrade to Angular 17.1 (yet)",
      "matchPackageNames": [
        "angular"
      ],
      "allowedVersions": "<17.1.0",
      "groupName": "frontend-libraries"
    },
    {
      "managers": [
        "npm"
      ],
      "packagePatterns": [
        "*"
      ],
      "groupName": "frontend-libraries"
    },
    {
      "managers": [
        "maven"
      ],
      "packagePatterns": [
        "*"
      ],
      "groupName": "backend-libraries"
    }
  ]
}